	<!-- Datos del producto embebidos en atributos para lectura segura desde JS -->
	<div id="producto-meta" style="display:none" 
		data-id={producto?.id}
		data-nombre={producto?.nombre}
		data-precio={producto?.precio}
		data-imagen={producto?.imagen}
	></div>

	<script>
		// Construir objeto desde atributos embebidos (evita JSON.parse y errores de compilación)
		const meta = document.getElementById('producto-meta');
		const PRODUCTO = {
			id: meta?.dataset?.id ? Number(meta.dataset.id) : null,
			nombre: meta?.dataset?.nombre || '',
			precio: meta?.dataset?.precio ? Number(meta.dataset.precio) : 0,
			imagen: meta?.dataset?.imagen || ''
		};
		// Funciones para el contador de cantidad
		let maxStock = 1;
		
		// Obtener el stock máximo del atributo del input
		document.addEventListener('DOMContentLoaded', () => {
			const cantidadInput = document.getElementById('cantidad');
			if (cantidadInput) {
				maxStock = parseInt(cantidadInput.getAttribute('max')) || 1;
				console.log('Stock máximo:', maxStock); // Debug
			}
			actualizarBotones();
		});
		
		function cambiarCantidad(cambio) {
			const input = document.getElementById('cantidad');
			let cantidad = parseInt(input.value) + cambio;
			
			if (cantidad < 1) cantidad = 1;
			if (cantidad > maxStock) cantidad = maxStock;
			
			input.value = cantidad;
			actualizarBotones();
		}
		
		function validarCantidad() {
			const input = document.getElementById('cantidad');
			let cantidad = parseInt(input.value);
			
			if (isNaN(cantidad) || cantidad < 1) cantidad = 1;
			if (cantidad > maxStock) cantidad = maxStock;
			
			input.value = cantidad;
			actualizarBotones();
		}
		
		function actualizarBotones() {
			const input = document.getElementById('cantidad');
			const decrementar = document.getElementById('decrementar');
			const incrementar = document.getElementById('incrementar');
			const cantidad = parseInt(input.value);
			
			// Obtener stock actual si no se ha inicializado correctamente
			if (maxStock === 1 && input) {
				const stockFromInput = parseInt(input.getAttribute('max'));
				if (stockFromInput && stockFromInput > 1) {
					maxStock = stockFromInput;
				}
			}
			
			decrementar.disabled = cantidad <= 1;
			incrementar.disabled = cantidad >= maxStock;
			
			if (cantidad <= 1) {
				decrementar.classList.add('opacity-50', 'cursor-not-allowed');
			} else {
				decrementar.classList.remove('opacity-50', 'cursor-not-allowed');
			}
			
			if (cantidad >= maxStock) {
				incrementar.classList.add('opacity-50', 'cursor-not-allowed');
			} else {
				incrementar.classList.remove('opacity-50', 'cursor-not-allowed');
			}
		}
		
		function agregarAlCarrito(productoId) {
			const cantidad = parseInt(document.getElementById('cantidad').value);
			// Usar valores seguros desde SSR en lugar de leer del DOM
			const nombre = PRODUCTO.nombre;
			const precio = Number(PRODUCTO.precio) || 0;
			const imagen = PRODUCTO.imagen || '';
			
			// Obtener carrito actual del localStorage
			let carrito = JSON.parse(localStorage.getItem('carrito')) || [];
			
			// Buscar si el producto ya existe en el carrito
			const productoExistente = carrito.find(item => item.id === productoId);
			
			if (productoExistente) {
				productoExistente.cantidad += cantidad;
			} else {
				carrito.push({
					id: productoId,
					cantidad: cantidad,
					nombre: nombre,
					precio_venta: precio, // usar clave precio_venta para layout
					imagen_url: imagen    // usar clave imagen_url para layout
				});
			}
			
			// Guardar carrito actualizado
			localStorage.setItem('carrito', JSON.stringify(carrito));
			// Notificar a otras vistas para actualizar badge/panel
			try { window.dispatchEvent(new Event('carrito:changed')); } catch {}
			
			// Mostrar notificación
			mostrarNotificacion(`${cantidad} producto(s) agregado(s) al carrito`, 'success');
			
			// Actualizar contador del carrito si existe
			actualizarContadorCarrito();
		}

		function comprarAhora(productoId) {
			agregarAlCarrito(productoId);
			try { window.location.href = '/checkout'; } catch { window.location.href = '/carrito'; }
		}
		
		function mostrarNotificacion(mensaje, tipo = 'success') {
			// Crear elemento de notificación
			const notificacion = document.createElement('div');
			notificacion.className = `fixed top-4 right-4 px-6 py-3 rounded-lg text-white z-50 ${
				tipo === 'success' ? 'bg-green-500' : 'bg-red-500'
			}`;
			notificacion.textContent = mensaje;
			
			document.body.appendChild(notificacion);
			
			// Remover después de 3 segundos
			setTimeout(() => {
				notificacion.remove();
			}, 3000);
		}
		
		function actualizarContadorCarrito() {
			const contador = document.getElementById('carrito-contador');
			const carrito = JSON.parse(localStorage.getItem('carrito')) || [];
			const totalItems = carrito.reduce((acc, item) => acc + item.cantidad, 0);
			if (contador) {
				contador.textContent = totalItems;
				contador.style.display = totalItems > 0 ? 'block' : 'none';
			}
			// Notificar también por evento para que el layout sincronice
			try { window.dispatchEvent(new Event('carrito:changed')); } catch {}
		}

		// Carrusel de productos similares (animación lenta controlada)
			document.addEventListener('DOMContentLoaded', () => {
				const cont = document.getElementById('similares-carousel');
				const prev = document.getElementById('similares-prev');
				const next = document.getElementById('similares-next');
				if (!cont) return;
			const getGapPx = () => {
				const g = window.getComputedStyle(cont).gap || '24px';
				const first = (g.split(' ')[0] || g).replace('px','');
				const val = parseFloat(first);
				return isNaN(val) ? 24 : val;
			};
			const getInsetPx = () => {
				const s = window.getComputedStyle(cont);
				const pl = parseFloat((s.paddingLeft || '0').replace('px','')) || 0;
				const pr = parseFloat((s.paddingRight || '0').replace('px','')) || 0;
				return { left: pl, right: pr };
			};
			const getCardFullWidth = () => {
				const card = cont.querySelector('.sim-card');
				if (!card) return 280;
				const rect = card.getBoundingClientRect();
				return Math.round(rect.width + getGapPx());
			};
			const getStep = () => getCardFullWidth();

			// Movimiento instantáneo (sin retraso)
			const moveInstant = (distance) => {
				cont.scrollLeft = cont.scrollLeft + distance;
			};

			prev?.addEventListener('click', () => { moveInstant(-getStep() * 4); snapToNearest(true); });
			next?.addEventListener('click', () => { moveInstant(getStep() * 4); snapToNearest(true); });

			// Drag to scroll (mouse)
			let isDown = false; let startX = 0; let startScroll = 0; let moved = false;
			window.__simDragGuard = false;
			const setGuard = () => { window.__simDragGuard = true; setTimeout(() => { window.__simDragGuard = false; }, 150); };
			cont.addEventListener('mousedown', (e) => {
				isDown = true; moved = false; cont.classList.add('cursor-grabbing');
				startX = e.pageX - cont.offsetLeft; startScroll = cont.scrollLeft;
			});
			cont.addEventListener('mousemove', (e) => {
				if (!isDown) return; e.preventDefault();
				const x = e.pageX - cont.offsetLeft; const walk = x - startX;
				cont.scrollLeft = startScroll - walk; if (Math.abs(walk) > 5) { moved = true; }
			});
			const snapToNearest = (instant = false) => {
				const step = getCardFullWidth();
				const { left: insetLeft, right: insetRight } = getInsetPx();
				const left = cont.scrollLeft;
				const relative = left - insetLeft;
				let target = Math.round(relative / step) * step + insetLeft;
				const maxScroll = cont.scrollWidth - cont.clientWidth; // límite derecho real
				target = Math.max(0, Math.min(target, maxScroll));
				cont.scrollLeft = target;
			};

			// Alinear al inicio: asegurar que la primera tarjeta esté junto al botón
			const alignToStart = () => {
				const { left: insetLeft } = getInsetPx();
				cont.scrollLeft = insetLeft;
				snapToNearest(true);
			};
			const endDrag = () => { if (isDown && moved) { setGuard(); snapToNearest(true); } isDown = false; moved = false; cont.classList.remove('cursor-grabbing'); };
			cont.addEventListener('mouseleave', endDrag);
			cont.addEventListener('mouseup', endDrag);

			// Drag to scroll (touch)
			let touchStartX = 0; let touchStartScroll = 0; let touchMoved = false;
			cont.addEventListener('touchstart', (e) => {
				const t = e.touches[0]; touchStartX = t.pageX - cont.offsetLeft; touchStartScroll = cont.scrollLeft; touchMoved = false;
			}, { passive: true });
			cont.addEventListener('touchmove', (e) => {
				const t = e.touches[0]; const x = t.pageX - cont.offsetLeft; const walk = x - touchStartX;
				cont.scrollLeft = touchStartScroll - walk; if (Math.abs(walk) > 5) { touchMoved = true; }
				e.preventDefault();
			}, { passive: false });
			cont.addEventListener('touchend', () => { if (touchMoved) { setGuard(); snapToNearest(true); } touchMoved = false; }, { passive: true });

			// Alinear al cargar para evitar tarjeta cortada inicial y al completar recursos
			alignToStart();
			window.addEventListener('load', alignToStart);
			// Re-alinear en resize (cambio de viewport) con debouncing
			let resizeTimer;
			window.addEventListener('resize', () => {
				clearTimeout(resizeTimer);
				resizeTimer = setTimeout(() => alignToStart(), 120);
			});

		});
		


		// Exponer funciones globalmente
		window.cambiarCantidad = cambiarCantidad;
		window.validarCantidad = validarCantidad;
		window.agregarAlCarrito = agregarAlCarrito;
		window.comprarAhora = comprarAhora;
	</script>

