---
export const prerender = false; // Habilitar SSR para esta página

import Layout from '../../layouts/Layout.astro';

// Configuración de API - usar URL completa para evitar problemas con el proxy en SSR
const API_BASE = 'http://localhost:8000/api';

// Obtener el parámetro de la URL
const { producto: productoSlug } = Astro.params;

// Obtener el producto específico desde la API
let producto = null;
let error = null;

try {
  console.log('=== Cargando producto individual ===');
  console.log('Slug del producto:', productoSlug);
  console.log('API_BASE:', API_BASE);
  
  // Primero, intentar obtener el producto por ID si el slug es numérico
  let productoId = null;
  if (/^\d+$/.test(productoSlug)) {
    productoId = parseInt(productoSlug);
  } else {
    // Si no es numérico, buscar en el catálogo por slug
    const responseCatalogo = await fetch(`${API_BASE}/productos/catalogo`);
    if (responseCatalogo.ok) {
      const productos = await responseCatalogo.json();
      const productoEncontrado = productos.find(p => {
        const slug = p.nombre.toLowerCase()
          .replace(/[áàäâ]/g, 'a')
          .replace(/[éèëê]/g, 'e')
          .replace(/[íìïî]/g, 'i')
          .replace(/[óòöô]/g, 'o')
          .replace(/[úùüû]/g, 'u')
          .replace(/[ñ]/g, 'n')
          .replace(/[^a-z0-9]/g, '-')
          .replace(/-+/g, '-')
          .replace(/^-|-$/g, '');
        console.log(`Comparando: "${slug}" === "${productoSlug}"`);
        return slug === productoSlug;
      });
      
      if (productoEncontrado) {
        productoId = productoEncontrado.id_producto;
      }
    }
  }
  
  if (productoId) {
    // Obtener el producto específico por ID
    const responseProducto = await fetch(`${API_BASE}/productos/${productoId}`);
    
    if (responseProducto.ok) {
      const productoData = await responseProducto.json();
      
      // Verificar si el producto está en catálogo y disponible
      if (productoData.cantidad_disponible > 0 && productoData.precio_venta > 0) {
        const now = new Date();
        const inicio = productoData.fecha_inicio_oferta ? new Date(productoData.fecha_inicio_oferta) : null;
        const fin = productoData.fecha_fin_oferta ? new Date(productoData.fecha_fin_oferta) : null;
        const ofertaVigente = !!productoData.oferta_activa && (!inicio || now >= inicio) && (!fin || now <= fin);
        let precioFinal = Number(productoData.precio_venta);
        if (ofertaVigente && productoData.tipo_oferta && Number(productoData.valor_oferta) > 0) {
          if (productoData.tipo_oferta === 'porcentaje') {
            const desc = Math.min(100, Math.max(0, Number(productoData.valor_oferta)));
            precioFinal = Math.max(0, precioFinal * (1 - desc / 100));
          } else if (productoData.tipo_oferta === 'fijo') {
            precioFinal = Math.max(0, precioFinal - Number(productoData.valor_oferta));
          }
        }
        producto = {
          id: productoData.id_producto,
          nombre: productoData.nombre,
          descripcion: productoData.descripcion || '',
          precio: precioFinal,
          precio_original: ofertaVigente ? productoData.precio_venta : null,
          tiene_oferta: ofertaVigente,
          imagen: productoData.imagen_url,
          categoria: productoData.categoria || 'Sin categoría',
          caracteristicas: productoData.caracteristicas || '',
          stock: productoData.cantidad_disponible,
          marca: productoData.marca || ''
        };
        console.log('Producto encontrado:', producto.nombre);
      } else {
        console.log('Producto no disponible o sin precio');
        error = 'Producto no disponible';
      }
    } else {
      console.log('Producto no encontrado en la API');
      error = 'Producto no encontrado';
    }
  } else {
    console.log('No se pudo determinar el ID del producto');
    error = 'Producto no encontrado';
  }
  
} catch (err) {
  console.error('Error al cargar producto:', err);
  error = 'Error al cargar el producto';
}

// Si no se encuentra el producto, devolver 404
if (!producto) {
  Astro.response.status = 404;
}
---

<Layout title={producto ? `${producto.nombre} - Ferretería Patricio` : "Producto no encontrado - Ferretería Patricio"}>
	<div class="container mx-auto px-4 py-8">
		<!-- Breadcrumb -->
		<nav class="text-sm mb-8">
			<ol class="list-none p-0 inline-flex">
				<li class="flex items-center">
					<a href="/" class="text-gray-500 hover:text-blue-600">Inicio</a>
					<svg class="w-2 h-2 mx-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
					</svg>
				</li>
				<li class="flex items-center">
					<a href="/productos" class="text-gray-500 hover:text-blue-600">Productos</a>
					<svg class="w-2 h-2 mx-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
					</svg>
				</li>
				<li class="text-gray-800">{producto ? producto.nombre : 'Producto no encontrado'}</li>
			</ol>
		</nav>

		{producto ? (
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
				<!-- Imagen del producto -->
				<div class="space-y-4">
					<div class="bg-white rounded-xl shadow-lg p-4 border border-gray-200">
						<div class="aspect-square rounded-lg overflow-hidden bg-gray-50 flex items-center justify-center">
						{producto.imagen ? (
							<img 
								src={producto.imagen} 
								alt={producto.nombre}
								class="max-w-full max-h-full object-contain hover:scale-105 transition-transform duration-300"
								onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
							/>
						) : (
							<img 
								src="/images/logos/herramientas.webp" 
								alt={producto.nombre}
								class="max-w-full max-h-full object-contain hover:scale-105 transition-transform duration-300"
								onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
							/>
						)}
						<!-- Fallback cuando la imagen no carga -->
						<div class="w-full h-full bg-gradient-to-br from-blue-50 to-blue-100 flex items-center justify-center" style="display: none;">
							<div class="text-center">
								<svg class="w-16 h-16 text-blue-400 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
								</svg>
								<p class="text-blue-600 font-medium">{producto.nombre}</p>
							</div>
						</div>
					</div>
					</div>
				</div>

					<!-- Detalles del producto -->
					<div class="space-y-6">
						<!-- Título y precio -->
						<div>
							<h1 class="text-4xl font-bold text-gray-900 mb-2">{producto.nombre}</h1>
							<div class="flex items-center space-x-4 mb-4">
								{producto.tiene_oferta ? (
									<>
										<span class="text-3xl font-bold text-blue-600">{new Intl.NumberFormat('es-PE', { style: 'currency', currency: 'PEN' }).format(producto.precio)}</span>
										<span class="text-xl text-gray-500 line-through">{new Intl.NumberFormat('es-PE', { style: 'currency', currency: 'PEN' }).format(producto.precio_original)}</span>
										<span class="text-sm px-2 py-1 bg-red-100 text-red-700 rounded">Oferta</span>
									</>
								) : (
									<span class="text-3xl font-bold text-blue-600">{new Intl.NumberFormat('es-PE', { style: 'currency', currency: 'PEN' }).format(producto.precio)}</span>
								)}
							</div>
						</div>

					<!-- Descripción -->
					<div class="border-t border-gray-200 pt-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-3">Descripción</h3>
						<p class="text-gray-600 leading-relaxed">{producto.descripcion}</p>
					</div>

					<!-- Especificaciones -->
					<div class="border-t border-gray-200 pt-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-3">Especificaciones</h3>
						<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
							<div class="flex justify-between py-2 border-b border-gray-100">
								<span class="text-gray-600">Categoría:</span>
								<span class="font-medium">{producto.categoria?.replace(/_/g, ' ')}</span>
							</div>
							<div class="flex justify-between py-2 border-b border-gray-100">
								<span class="text-gray-600">Stock disponible:</span>
								<span class="font-medium text-green-600">{producto.stock} unidades</span>
							</div>
							{producto.caracteristicas && (
								<div class="col-span-full py-2 border-b border-gray-100">
									<span class="text-gray-600">Características:</span>
									<p class="font-medium mt-1">{producto.caracteristicas}</p>
								</div>
							)}
							<div class="flex justify-between py-2 border-b border-gray-100">
								<span class="text-gray-600">Garantía:</span>
								<span class="font-medium">12 meses</span>
							</div>
						</div>
					</div>

					<!-- Agregar al carrito -->
					<div class="border-t border-gray-200 pt-6">
						<div class="bg-gray-50 rounded-lg p-6">
							<h3 class="text-lg font-semibold text-gray-900 mb-4">Cantidad</h3>
							<div class="flex items-center space-x-4 mb-6">
								<div class="flex items-center border border-gray-300 rounded-lg">
									<button 
										id="decrementar" 
										class="px-4 py-2 text-gray-600 hover:text-gray-800 hover:bg-gray-100 rounded-l-lg transition-colors"
										onclick="cambiarCantidad(-1)"
									>
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
										</svg>
									</button>
									<input 
										id="cantidad" 
										type="number" 
										value="1" 
										min="1" 
										max={producto.stock}
										class="no-spinner w-16 py-2 text-center border-0 focus:ring-0 focus:outline-none"
										onchange="validarCantidad()"
									/>
									<button 
										id="incrementar" 
										class="px-4 py-2 text-gray-600 hover:text-gray-800 hover:bg-gray-100 rounded-r-lg transition-colors"
										onclick="cambiarCantidad(1)"
									>
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
										</svg>
									</button>
								</div>
								<span class="text-sm text-gray-500">Stock disponible: {producto.stock}</span>
							</div>
							<button 
								id="agregar-carrito"
								class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium flex items-center justify-center space-x-2"
								onclick={`agregarAlCarrito(${producto.id})`}
							>
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 2.5M7 13l2.5 2.5m6-2.5h.01M17 21a2 2 0 100-4 2 2 0 000 4zM9 21a2 2 0 100-4 2 2 0 000 4z" />
								</svg>
								<span>Agregar al carrito</span>
							</button>
						</div>
					</div>
				</div>
			</div>
		) : (
			<div class="text-center py-16">
				<h1 class="text-4xl font-bold text-gray-800 mb-4">Producto no encontrado</h1>
				<p class="text-gray-600 mb-8">El producto que buscas no existe o ha sido eliminado.</p>
				<a href="/productos" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors inline-block">
					Ver todos los productos
				</a>
			</div>
		)}
	</div>


	<!-- Datos del producto embebidos en atributos para lectura segura desde JS -->
	<div id="producto-meta" style="display:none" 
		data-id={producto?.id}
		data-nombre={producto?.nombre}
		data-precio={producto?.precio}
		data-imagen={producto?.imagen}
	></div>

	<script>
		// Construir objeto desde atributos embebidos (evita JSON.parse y errores de compilación)
		const meta = document.getElementById('producto-meta');
		const PRODUCTO = {
			id: meta?.dataset?.id ? Number(meta.dataset.id) : null,
			nombre: meta?.dataset?.nombre || '',
			precio: meta?.dataset?.precio ? Number(meta.dataset.precio) : 0,
			imagen: meta?.dataset?.imagen || ''
		};
		// Funciones para el contador de cantidad
		let maxStock = 1;
		
		// Obtener el stock máximo del atributo del input
		document.addEventListener('DOMContentLoaded', () => {
			const cantidadInput = document.getElementById('cantidad');
			if (cantidadInput) {
				maxStock = parseInt(cantidadInput.getAttribute('max')) || 1;
				console.log('Stock máximo:', maxStock); // Debug
			}
			actualizarBotones();
		});
		
		function cambiarCantidad(cambio) {
			const input = document.getElementById('cantidad');
			let cantidad = parseInt(input.value) + cambio;
			
			if (cantidad < 1) cantidad = 1;
			if (cantidad > maxStock) cantidad = maxStock;
			
			input.value = cantidad;
			actualizarBotones();
		}
		
		function validarCantidad() {
			const input = document.getElementById('cantidad');
			let cantidad = parseInt(input.value);
			
			if (isNaN(cantidad) || cantidad < 1) cantidad = 1;
			if (cantidad > maxStock) cantidad = maxStock;
			
			input.value = cantidad;
			actualizarBotones();
		}
		
		function actualizarBotones() {
			const input = document.getElementById('cantidad');
			const decrementar = document.getElementById('decrementar');
			const incrementar = document.getElementById('incrementar');
			const cantidad = parseInt(input.value);
			
			// Obtener stock actual si no se ha inicializado correctamente
			if (maxStock === 1 && input) {
				const stockFromInput = parseInt(input.getAttribute('max'));
				if (stockFromInput && stockFromInput > 1) {
					maxStock = stockFromInput;
				}
			}
			
			decrementar.disabled = cantidad <= 1;
			incrementar.disabled = cantidad >= maxStock;
			
			if (cantidad <= 1) {
				decrementar.classList.add('opacity-50', 'cursor-not-allowed');
			} else {
				decrementar.classList.remove('opacity-50', 'cursor-not-allowed');
			}
			
			if (cantidad >= maxStock) {
				incrementar.classList.add('opacity-50', 'cursor-not-allowed');
			} else {
				incrementar.classList.remove('opacity-50', 'cursor-not-allowed');
			}
		}
		
		function agregarAlCarrito(productoId) {
			const cantidad = parseInt(document.getElementById('cantidad').value);
			// Usar valores seguros desde SSR en lugar de leer del DOM
			const nombre = PRODUCTO.nombre;
			const precio = Number(PRODUCTO.precio) || 0;
			const imagen = PRODUCTO.imagen || '';
			
			// Obtener carrito actual del localStorage
			let carrito = JSON.parse(localStorage.getItem('carrito')) || [];
			
			// Buscar si el producto ya existe en el carrito
			const productoExistente = carrito.find(item => item.id === productoId);
			
			if (productoExistente) {
				productoExistente.cantidad += cantidad;
			} else {
				carrito.push({
					id: productoId,
					cantidad: cantidad,
					nombre: nombre,
					precio_venta: precio, // usar clave precio_venta para layout
					imagen_url: imagen    // usar clave imagen_url para layout
				});
			}
			
			// Guardar carrito actualizado
			localStorage.setItem('carrito', JSON.stringify(carrito));
			
			// Mostrar notificación
			mostrarNotificacion(`${cantidad} producto(s) agregado(s) al carrito`, 'success');
			
			// Actualizar contador del carrito si existe
			actualizarContadorCarrito();
		}
		
		function mostrarNotificacion(mensaje, tipo = 'success') {
			// Crear elemento de notificación
			const notificacion = document.createElement('div');
			notificacion.className = `fixed top-4 right-4 px-6 py-3 rounded-lg text-white z-50 ${
				tipo === 'success' ? 'bg-green-500' : 'bg-red-500'
			}`;
			notificacion.textContent = mensaje;
			
			document.body.appendChild(notificacion);
			
			// Remover después de 3 segundos
			setTimeout(() => {
				notificacion.remove();
			}, 3000);
		}
		
		function actualizarContadorCarrito() {
			const contador = document.getElementById('carrito-contador');
			const carrito = JSON.parse(localStorage.getItem('carrito')) || [];
			const totalItems = carrito.reduce((acc, item) => acc + item.cantidad, 0);
			if (contador) {
				contador.textContent = totalItems;
			}
		}
		

		
		// Exponer funciones globalmente
		window.cambiarCantidad = cambiarCantidad;
		window.validarCantidad = validarCantidad;
		window.agregarAlCarrito = agregarAlCarrito;
	</script>

	<style>
		/* Ocultar flechas del input number (Chrome, Safari, Edge Chromium) */
		.no-spinner::-webkit-outer-spin-button,
		.no-spinner::-webkit-inner-spin-button {
			-webkit-appearance: none;
			margin: 0;
		}
		/* Firefox */
		.no-spinner[type="number"] {
			-moz-appearance: textfield;
		}
	</style>
</Layout>