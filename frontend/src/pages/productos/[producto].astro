---
export const prerender = false; // Habilitar SSR para esta página

import Layout from '../../layouts/Layout.astro';

// Obtener la URL de la API desde las variables de entorno
const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3000/api';

// Obtener el parámetro de la URL
const { producto: productoSlug } = Astro.params;

// Obtener el producto específico desde la API
let producto = null;
let error = null;

try {
  console.log('=== Cargando producto individual ===');
  console.log('Slug del producto:', productoSlug);
  console.log('API_URL:', API_URL);
  
  // Obtener todos los productos
  const response = await fetch(`${API_URL}/productos`);
  
  if (!response.ok) {
    throw new Error(`Error al obtener productos: ${response.status} ${response.statusText}`);
  }
  
  const productos = await response.json();
  console.log('Total productos obtenidos:', productos.length);
  
  // Buscar el producto que coincida con el slug
  producto = productos.find(p => {
    const slug = p.nombre.toLowerCase().replace(/\s+/g, '-');
    console.log(`Comparando: "${slug}" === "${productoSlug}"`);
    return slug === productoSlug;
  });
  
  if (!producto) {
    console.log('Producto no encontrado para slug:', productoSlug);
    error = 'Producto no encontrado';
  } else {
    console.log('Producto encontrado:', producto.nombre);
  }
  
} catch (err) {
  console.error('Error al cargar producto:', err);
  error = 'Error al cargar el producto';
}

// Si no se encuentra el producto, devolver 404
if (!producto) {
  Astro.response.status = 404;
}
---

<Layout title={producto ? `${producto.nombre} - Ferretería Patricio` : "Producto no encontrado - Ferretería Patricio"}>
	<div class="container mx-auto px-4 py-8">
		<!-- Breadcrumb -->
		<nav class="text-sm mb-8">
			<ol class="list-none p-0 inline-flex">
				<li class="flex items-center">
					<a href="/" class="text-gray-500 hover:text-blue-600">Inicio</a>
					<svg class="w-2 h-2 mx-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
					</svg>
				</li>
				<li class="flex items-center">
					<a href="/productos" class="text-gray-500 hover:text-blue-600">Productos</a>
					<svg class="w-2 h-2 mx-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
					</svg>
				</li>
				<li class="text-gray-800">{producto ? producto.nombre : 'Producto no encontrado'}</li>
			</ol>
		</nav>

		{producto ? (
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
				<!-- Imagen del producto -->
				<div class="space-y-4">
					<div class="bg-white rounded-xl shadow-lg p-4 border border-gray-200">
						<div class="aspect-square rounded-lg overflow-hidden">
						{producto.imagen ? (
							<img 
								src={producto.imagen} 
								alt={producto.nombre}
								class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
								onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
							/>
						) : (
							<img 
								src="/herramientas.webp" 
								alt={producto.nombre}
								class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
								onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
							/>
						)}
						<!-- Fallback cuando la imagen no carga -->
						<div class="w-full h-full bg-gradient-to-br from-blue-50 to-blue-100 flex items-center justify-center" style="display: none;">
							<div class="text-center">
								<svg class="w-16 h-16 text-blue-400 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
								</svg>
								<p class="text-blue-600 font-medium">{producto.nombre}</p>
							</div>
						</div>
					</div>
					</div>
				</div>

				<!-- Detalles del producto -->
				<div class="space-y-6">
					<!-- Título y precio -->
					<div>
						<h1 class="text-4xl font-bold text-gray-900 mb-2">{producto.nombre}</h1>
						<div class="flex items-center space-x-4 mb-4">
							<span class="text-3xl font-bold text-blue-600">${producto.precio}</span>
						</div>
					</div>

					<!-- Descripción -->
					<div class="border-t border-gray-200 pt-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-3">Descripción</h3>
						<p class="text-gray-600 leading-relaxed">{producto.descripcion}</p>
					</div>

					<!-- Especificaciones -->
					<div class="border-t border-gray-200 pt-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-3">Especificaciones</h3>
						<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
							<div class="flex justify-between py-2 border-b border-gray-100">
								<span class="text-gray-600">Categoría:</span>
								<span class="font-medium">{producto.categoria?.replace(/_/g, ' ')}</span>
							</div>
							<div class="flex justify-between py-2 border-b border-gray-100">
								<span class="text-gray-600">Stock disponible:</span>
								<span class="font-medium text-green-600">{producto.stock} unidades</span>
							</div>
							{producto.caracteristicas && (
								<div class="col-span-full py-2 border-b border-gray-100">
									<span class="text-gray-600">Características:</span>
									<p class="font-medium mt-1">{producto.caracteristicas}</p>
								</div>
							)}
							<div class="flex justify-between py-2 border-b border-gray-100">
								<span class="text-gray-600">Garantía:</span>
								<span class="font-medium">12 meses</span>
							</div>
						</div>
					</div>

					<!-- Información de contacto -->
					<div class="border-t border-gray-200 pt-6">
						<div class="bg-blue-50 rounded-lg p-6">
							<h3 class="text-lg font-semibold text-blue-900 mb-3">¿Interesado en este producto?</h3>
							<p class="text-blue-700 mb-4">Contáctanos para más información sobre disponibilidad y precios especiales.</p>
							<div class="flex flex-col sm:flex-row gap-3">
								<a href="tel:+1234567890" class="flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium flex items-center justify-center space-x-2">
									<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
									</svg>
									<span>Llamar</span>
								</a>
								<a href="mailto:info@ferreteria.com" class="flex-1 bg-white border border-blue-600 text-blue-600 px-6 py-3 rounded-lg hover:bg-blue-50 transition-colors font-medium flex items-center justify-center space-x-2">
									<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
									</svg>
									<span>Email</span>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		) : (
			<div class="text-center py-16">
				<h1 class="text-4xl font-bold text-gray-800 mb-4">Producto no encontrado</h1>
				<p class="text-gray-600 mb-8">El producto que buscas no existe o ha sido eliminado.</p>
				<a href="/productos" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors inline-block">
					Ver todos los productos
				</a>
			</div>
		)}
	</div>
</Layout>