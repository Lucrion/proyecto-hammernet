			"@type": "Product",
			"name": producto?.nombre || "",
			"image": producto?.imagen || "/images/logos/herramientas.webp",
			"description": producto?.descripcion || "",
			"brand": producto?.marca ? { "@type": "Brand", "name": producto.marca } : undefined,
			"category": producto?.categoria || undefined,
			"offers": {
				"@type": "Offer",
				"priceCurrency": "CLP",
				"price": Math.round(producto?.precio || 0),
				"availability": (producto?.stock || 0) > 0 ? "https://schema.org/InStock" : "https://schema.org/OutOfStock",
				"url": typeof Astro !== 'undefined' ? Astro.url.toString() : undefined
			}
		})}
	</script>

