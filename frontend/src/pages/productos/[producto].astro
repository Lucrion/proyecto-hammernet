export const prerender = false; // Habilitar SSR para esta página

import Layout from '../../layouts/Layout.astro';

const isDev = (import.meta.env.MODE === 'development') || (import.meta.env.DEV === true);
const devApi = '/api';
const prodApi = (import.meta.env.PUBLIC_API_URL_PRODUCTION || import.meta.env.PUBLIC_API_URL || 'http://localhost:8000/api');
const chosenApi = isDev ? devApi : prodApi;
const API_BASE = chosenApi.endsWith('/api') ? chosenApi : chosenApi.replace(/\/$/, '') + '/api';
const FRONT_ORIGIN = typeof Astro !== 'undefined' ? Astro.url.origin : '';
const API_HOST = /^https?:\/\//i.test(API_BASE) ? API_BASE.replace(/\/api$/, '') : (FRONT_ORIGIN ? FRONT_ORIGIN.replace(/\/$/, '') : '');
const PROXY_BASE = FRONT_ORIGIN ? (FRONT_ORIGIN.replace(/\/$/, '') + '/api') : null;
const ABS_API_BASE = /^https?:\/\//i.test(API_BASE) ? API_BASE : (PROXY_BASE || 'http://127.0.0.1:8000/api');

// Normaliza URLs de imagen: si vienen relativas desde BD, se prefijan con el host del backend
const normalizeImageUrl = (u) => {
  if (!u) return null;
  const s = String(u);
  if (/^https?:\/\//i.test(s)) return s; // URL absoluta (Cloudinary u otros)
  if (s.startsWith('/')) return API_HOST + s; // relativa desde raíz del backend
  return API_HOST + '/' + s; // relativa sin slash inicial
};

// Obtener el parámetro de la URL
const { producto: productoSlug } = Astro.params;

// Obtener el producto específico desde la API
let producto = null;
let error = null;
let productosSimilares = [];

try {
  console.log('=== Cargando producto individual ===');
  console.log('Slug del producto:', productoSlug);
  console.log('API_BASE:', API_BASE);
  
  // Primero, intentar obtener el producto por ID si el slug es numérico
  let productoId = null;
  if (/^\d+$/.test(productoSlug)) {
    productoId = parseInt(productoSlug);
  } else {
    // Si no es numérico, buscar por slug: primero endpoint dedicado, luego fallback paginado
    const PAGE_SIZE = 100;
    // Intento 1: endpoint dedicado por slug
    try {
      const slugResp = await fetch(`${ABS_API_BASE}/productos/catalogo/slug/${productoSlug}`);
      if (slugResp.ok) {
        const prod = await slugResp.json();
        productoId = prod?.id_producto;
      }
    } catch (e) {
      console.warn('No se pudo resolver por slug directamente:', e);
    }
    // Intento 2: fallback paginado si no se resolvió
    try {
      let total = 0;
      const respTotal = await fetch(`${ABS_API_BASE}/productos/catalogo/total`);
      if (respTotal.ok) {
        const jsonTotal = await respTotal.json();
        total = Number(jsonTotal.total || 0);
      }
      // Si el total es desconocido, al menos intentar una página grande
      const maxItems = total > 0 ? total : PAGE_SIZE;
      let skip = 0;
      while (skip < maxItems && !productoId) {
        const respPage = await fetch(`${ABS_API_BASE}/productos/catalogo?skip=${skip}&limit=${PAGE_SIZE}`);
        if (!respPage.ok) break;
        const productos = await respPage.json();
        if (!Array.isArray(productos) || productos.length === 0) break;
        const productoEncontrado = productos.find(p => {
          const slug = String(p.nombre || '').toLowerCase()
            .replace(/[áàäâ]/g, 'a')
            .replace(/[éèëê]/g, 'e')
            .replace(/[íìïî]/g, 'i')
            .replace(/[óòöô]/g, 'o')
            .replace(/[úùüû]/g, 'u')
            .replace(/[ñ]/g, 'n')
            .replace(/[^a-z0-9]/g, '-')
            .replace(/-+/g, '-')
            .replace(/^-|-$/g, '');
          return slug === productoSlug;
        });
        if (productoEncontrado) {
          productoId = productoEncontrado.id_producto;
          break;
        }
        skip += PAGE_SIZE;
      }
    } catch (e) {
      console.warn('No se pudo buscar en catálogo paginado:', e);
    }
  }
  
  if (productoId) {
    let responseProducto = await fetch(`${ABS_API_BASE}/productos/${productoId}`);
    if (!responseProducto.ok && PROXY_BASE) {
      try { responseProducto = await fetch(`${PROXY_BASE}/productos/${productoId}`); } catch {}
    }
    if (responseProducto.ok) {
      const productoData = await responseProducto.json();

      const now = new Date();
      const inicio = productoData.fecha_inicio_oferta ? new Date(productoData.fecha_inicio_oferta) : null;
      const fin = productoData.fecha_fin_oferta ? new Date(productoData.fecha_fin_oferta) : null;
      const ofertaVigenteFlag = !!productoData.oferta_activa && (!inicio || now >= inicio) && (!fin || now <= fin);
      const precioOriginal = Number(productoData.precio_venta ?? productoData.precio ?? 0);
      const apiPrecioFinal = Number(productoData.precio_final ?? NaN);
      let precioFinal = Number.isFinite(apiPrecioFinal) ? apiPrecioFinal : precioOriginal;
      if (!Number.isFinite(apiPrecioFinal) && ofertaVigenteFlag && productoData.tipo_oferta && Number(productoData.valor_oferta) > 0) {
        if (productoData.tipo_oferta === 'porcentaje') {
          const desc = Math.min(100, Math.max(0, Number(productoData.valor_oferta)));
          precioFinal = Math.max(0, precioOriginal * (1 - desc / 100));
        } else if (productoData.tipo_oferta === 'fijo') {
          precioFinal = Math.max(0, precioOriginal - Number(productoData.valor_oferta));
        }
      }
      const tieneDescuento = precioFinal < precioOriginal;
      const descuentoPct = (tieneDescuento && precioOriginal > 0)
        ? Math.max(0, Math.min(100, Math.round(((precioOriginal - precioFinal) / precioOriginal) * 100)))
        : 0;
      producto = {
        id: productoData.id_producto,
        nombre: productoData.nombre,
        descripcion: productoData.descripcion || '',
        precio: precioFinal,
        precio_original: tieneDescuento ? precioOriginal : null,
        tiene_oferta: tieneDescuento,
        descuento_pct: descuentoPct,
        imagen: normalizeImageUrl(productoData.imagen_url),
        categoria: productoData.categoria || 'Sin categoría',
        caracteristicas: productoData.caracteristicas || '',
        stock: productoData.cantidad_disponible,
        marca: productoData.marca || '',
        garantia_meses: productoData.garantia_meses ?? null,
        modelo: productoData.modelo || '',
        color: productoData.color || '',
        material: productoData.material || '',
        subcategoria: productoData.subcategoria || '',
        id_subcategoria: productoData.id_subcategoria ?? null,
        codigo_interno: productoData.codigo_interno || ''
      };
      console.log('Producto encontrado:', producto.nombre);

      // Obtener productos similares desde la base de datos vía endpoint dedicado (máximo 10)
      try {
        let respSim = await fetch(`${ABS_API_BASE}/productos/similares/${productoData.id_producto}?limit=10`);
        if (!respSim.ok && PROXY_BASE) {
          try { respSim = await fetch(`${PROXY_BASE}/productos/similares/${productoData.id_producto}?limit=10`); } catch {}
        }
        if (respSim.ok) {
          const similares = await respSim.json();
          const baseSim = Array.isArray(similares) ? similares.map(s => ({
            id: s.id,
            nombre: s.nombre,
            descripcion: s.descripcion || '',
            imagen: normalizeImageUrl(s.imagen),
            precio: Number(s.precio || 0)
          })) : [];
          // Filtrar por pertenencia al catálogo público
          let catalogSet = new Set();
          try {
            let respCat = await fetch(`${ABS_API_BASE}/productos/catalogo?skip=0&limit=1000`);
            if (!respCat.ok && PROXY_BASE) {
              try { respCat = await fetch(`${PROXY_BASE}/productos/catalogo?skip=0&limit=1000`); } catch {}
            }
            if (respCat.ok) {
              const catalogo = await respCat.json();
              if (Array.isArray(catalogo)) {
                catalogSet = new Set(catalogo.map(p => p.id_producto).filter(id => id != null));
              }
            }
          } catch {}

          productosSimilares = await Promise.all(baseSim.map(async (sim) => {
            if (catalogSet.size && !catalogSet.has(sim.id)) { return null; }
            try {
              let respDet = await fetch(`${ABS_API_BASE}/productos/${sim.id}`);
              if (!respDet.ok && PROXY_BASE) {
                try { respDet = await fetch(`${PROXY_BASE}/productos/${sim.id}`); } catch {}
              }
              if (respDet.ok) {
                const data = await respDet.json();
                const now = new Date();
                const inicio = data.fecha_inicio_oferta ? new Date(data.fecha_inicio_oferta) : null;
                const fin = data.fecha_fin_oferta ? new Date(data.fecha_fin_oferta) : null;
                const ofertaVigente = !!data.oferta_activa && (!inicio || now >= inicio) && (!fin || now <= fin);
                const precioOriginal = Number(data.precio_venta ?? data.precio ?? sim.precio ?? 0);
                const apiPrecioFinal = Number(data.precio_final ?? NaN);
                let precioFinal = Number.isFinite(apiPrecioFinal) ? apiPrecioFinal : precioOriginal;
                if (!Number.isFinite(apiPrecioFinal) && ofertaVigente && data.tipo_oferta && Number(data.valor_oferta) > 0) {
                  if (data.tipo_oferta === 'porcentaje') {
                    const desc = Math.min(100, Math.max(0, Number(data.valor_oferta)));
                    precioFinal = Math.max(0, precioOriginal * (1 - desc / 100));
                  } else if (data.tipo_oferta === 'fijo') {
                    precioFinal = Math.max(0, precioOriginal - Number(data.valor_oferta));
                  }
                }
                const tieneDescuento = precioFinal < precioOriginal;
                const descuentoPct = (tieneDescuento && precioOriginal > 0)
                  ? Math.max(0, Math.min(100, Math.round(((precioOriginal - precioFinal) / precioOriginal) * 100)))
                  : 0;
                return {
                  ...sim,
                  imagen: normalizeImageUrl(data.imagen_url) || sim.imagen,
                  precio: precioFinal,
                  precio_original: tieneDescuento ? precioOriginal : null,
                  tiene_oferta: tieneDescuento,
                  descuento_pct: descuentoPct
                };
              }
            } catch {}
            return catalogSet.size ? null : sim;
          }));
          productosSimilares = productosSimilares.filter(Boolean);
        }
      } catch (e) {
        console.warn('No se pudo cargar productos similares:', e);
      }
    } else {
      console.log('Producto no encontrado en la API');
      error = 'Producto no encontrado';
    }
  } else {
    console.log('No se pudo determinar el ID del producto');
    error = 'Producto no encontrado';
  }
  
} catch (err) {
  console.error('Error al cargar producto:', err);
  error = 'Error al cargar el producto';
}

// Preparar especificaciones estructuradas a partir de "caracteristicas"
let specItems = [];
try {
  if (producto && producto.caracteristicas) {
    const raw = producto.caracteristicas;
    let parsed = null;
    // Intentar parsear JSON
    try { parsed = JSON.parse(raw); } catch {}
    if (parsed && typeof parsed === 'object') {
      if (Array.isArray(parsed)) {
        // Array de strings o objetos {key,value}
        specItems = parsed.map(item => {
          if (typeof item === 'string') {
            const [k, ...rest] = item.split(':');
            return { key: k?.trim() || null, value: rest.join(':').trim() || item.trim() };
          }
          if (item && typeof item === 'object') {
            const k = item.key ?? item.nombre ?? item.propiedad ?? null;
            const v = item.value ?? item.valor ?? item.descripcion ?? '';
            return { key: k, value: String(v).trim() };
          }
          return { key: null, value: String(item).trim() };
        }).filter(it => it.value);
      } else {
        // Objeto plano {clave: valor}
        specItems = Object.entries(parsed)
          .map(([k, v]) => ({ key: String(k).trim(), value: String(v).trim() }))
          .filter(it => it.value);
      }
    } else if (typeof raw === 'string') {
      // Texto: dividir por saltos de línea o ';'
      const parts = raw.split(/\n|;|\r/).map(s => s.trim()).filter(s => s);
      specItems = parts.map(p => {
        const [k, ...rest] = p.split(':');
        const val = rest.join(':').trim();
        return { key: val ? k.trim() : null, value: val || p };
      });
    }
  }
} catch (e) {
  // Fallback silencioso: si falla el parseo, se mantiene la visualización simple
}

let specList = [];
try {
  const mapKeys = {
    potencia: 'Potencia',
    watt: 'Potencia',
    w: 'Potencia',
    voltaje: 'Voltaje',
    v: 'Voltaje',
    velocidad: 'Velocidad',
    capacidad: 'Capacidad',
    dimensiones: 'Dimensiones',
    peso: 'Peso',
    material: 'Material',
    modelo: 'Modelo',
    color: 'Color'
  };
  const normKey = k => {
    const base = String(k || '').trim().toLowerCase();
    if (!base) return '';
    const hit = Object.keys(mapKeys).find(s => base.includes(s));
    if (hit) return mapKeys[hit];
    return base.charAt(0).toUpperCase() + base.slice(1);
  };
  const normVal = v => String(v || '').trim().replace(/(\d)([a-zA-Z])/g, '$1 $2').replace(/\s+/g, ' ');
  const seen = new Set();
  specList = specItems.map(it => ({ key: normKey(it.key), value: normVal(it.value) }))
    .filter(({ key, value }) => {
      const sig = (key + '|' + value).toLowerCase();
      if (seen.has(sig)) return false;
      seen.add(sig);
      if ((key === 'Modelo' && producto?.modelo) || (key === 'Color' && producto?.color) || (key === 'Material' && producto?.material)) return false;
      return Boolean(value);
    });
} catch {}

// Si no se encuentra el producto, devolver 404
if (!producto) {
  Astro.response.status = 404;
}
