---
import EnvLoader from '../components/EnvLoader.astro';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Buscar Orden de Compra</title>
    <EnvLoader />
  </head>
  <body class="min-h-screen bg-gray-100">
    <div class="min-h-screen flex relative">
      <button type="button" class="absolute top-6 left-6 text-gray-600 hover:text-gray-900" onclick="(history.length>1?history.back():location.href='/')">⟵</button>
      <div class="w-1/2 bg-[#2B5BA9] flex items-center justify-center">
        <img src="/images/logos/logo_bn.webp" alt="Ferretería Patricio" class="w-40 h-40">
      </div>
      <div class="w-1/2 bg-white flex items-center justify-center p-12">
        <div class="w-full max-w-md">
          <h2 class="text-2xl font-semibold text-gray-900 mb-8">Orden de compra</h2>
          <form id="orderForm" class="space-y-6" onsubmit="return false">
            <div>
              <label for="buy_order" class="block text-sm font-medium text-gray-700 mb-1">Ingrese su orden</label>
              <input id="buy_order" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="Ej: ORD-123-173..." required />
            </div>
            <div>
              <button id="searchBtn" type="submit" class="w-full py-2 px-4 rounded-md text-sm font-medium text-white bg-gray-900 hover:bg-gray-800">Buscar</button>
            </div>
            <div id="status" class="mt-2 text-sm text-center hidden"></div>
          </form>
          <div id="detalle" class="mt-6 hidden">
            <h3 class="text-lg font-semibold">Detalle de la compra</h3>
            <pre id="detalleJson" class="bg-gray-100 p-3 rounded text-xs overflow-auto"></pre>
            <div class="mt-3">
              <a id="verCompras" href="/compras" class="px-4 py-2 bg-blue-600 text-white rounded">Ver en Mis Compras</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script type="module">
      (function(){
        const form = document.getElementById('orderForm');
        const status = document.getElementById('status');
        const detalle = document.getElementById('detalle');
        const detalleJson = document.getElementById('detalleJson');
        const verCompras = document.getElementById('verCompras');
        const API_BASE = window.API_BASE || '/api';
        const showStatus=(m,t='info')=>{ status.textContent=m; status.className='mt-2 text-sm text-center'; status.classList.remove('hidden'); status.classList.add(t==='error'?'text-red-600':t==='success'?'text-green-600':'text-gray-600'); };
        form.addEventListener('submit', async (e)=>{
          e.preventDefault();
          const bo = (document.getElementById('buy_order').value||'').trim();
          if (!bo) { showStatus('Ingrese la orden', 'error'); return; }
          showStatus('Buscando orden...', 'info');
          try {
            const resp = await fetch(`${API_BASE}/ventas/orden/${encodeURIComponent(bo)}`, { method:'GET', headers:{ 'Accept':'application/json' } });
            if (!resp.ok) { const txt = await resp.text(); showStatus(txt||'Orden no encontrada','error'); return; }
            const data = await resp.json();
            detalleJson.textContent = JSON.stringify(data,null,2);
            detalle.classList.remove('hidden');
            showStatus('Orden encontrada','success');
            verCompras.href = `/compras?bo=${encodeURIComponent(bo)}`;
          } catch (err) {
            showStatus('Error de conexión','error');
          }
        });
      })();
    </script>
  </body>
  </html>
