    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-row gap-8">
            <!-- Filtros -->
            <div class="w-64 flex-shrink-0 bg-white border border-gray-200 p-6 rounded-xl shadow h-fit transition-all duration-300 font-sans text-sm sticky top-24" data-aos="fade-right" data-aos-duration="1000">
