---
import Layout from '../layouts/Layout.astro';
// Evitar cargar script externo por ahora; inyectar lógica mínima inline
---

<script type="module">
  import { trackEvent } from '/src/scripts/utils/analytics.js';
  // Helpers para normalizar URLs de imágenes (soporta relativas del backend)
  function getApiHost() {
    try {
      const env = window.__ENV__ || {};
      const api = env.PUBLIC_API_URL || env.PUBLIC_API_URL_PRODUCTION || '/api';
      return api.replace(/\/api$/, '');
    } catch {
      return '';
    }
  }

  function normalizeImageUrl(u) {
    if (!u) return null;
    const s = String(u);
    if (/^(https?:\/\/|data:)/i.test(s)) return s;
    const host = getApiHost();
    const base = host || (typeof location !== 'undefined' ? location.origin : '');
    if (s.startsWith('/')) return base ? (base + s) : s;
    return base ? (base + '/' + s) : s;
  }
  // Lógica mínima para catálogo sin botón "Ver más"
  const state = {
    todosProductos: [],
    totalProductos: 0,
    paginacion: { paginaActual: 1, productosPorPagina: 12, totalPaginas: 1 },
    filtros: { busqueda: '', precioMin: 0, precioMax: 100000, usarPrecio: false, categoriaId: null, subcategoriaId: null },
    orden: { sortBy: 'default' }
  };

  const contenedorProductos = document.getElementById('productos-grid');
  const infoPaginacionContainer = document.getElementById('info-paginacion');
  const paginacionContainer = document.getElementById('paginacion');
  const inputBusqueda = document.getElementById('busqueda');
  const rangoPrecio = document.getElementById('precio-rango');
  const precioValor = document.getElementById('precio-valor');
  const btnTogglePrecio = document.getElementById('toggle-precio');
  const precioContainer = document.getElementById('precio-container');
  const iconPrecio = document.getElementById('icon-precio');
  const btnToggleOrden = document.getElementById('toggle-orden');
  const iconOrden = document.getElementById('icon-orden');
  const ordenContainer = document.getElementById('orden-container');
  const btnClearFilters = document.getElementById('btn-clear-filters');
  const btnClearFiltersBottom = document.getElementById('btn-clear-filters-bottom');
  const btnToggleCategorias = document.getElementById('toggle-categorias');
  const iconCategorias = document.getElementById('icon-categorias');
  const categoriasContainer = document.getElementById('categorias-container');
  const btnToggleSubcats = document.getElementById('toggle-subcats');
  const iconSubcats = document.getElementById('icon-subcats');
  const subcatsContainer = document.getElementById('subcats-container');
  async function cargarCategorias() {
    try {
      const res = await fetch('/api/categorias/');
      const cats = res.ok ? await res.json() : [];
      renderCategorias(Array.isArray(cats) ? cats : []);
    } catch {}
  }
  async function cargarSubcategorias(categoriaId) {
    try {
      const res = await fetch(`/api/subcategorias/?categoria_id=${encodeURIComponent(categoriaId)}`);
      const subs = res.ok ? await res.json() : [];
      renderSubcategorias(Array.isArray(subs) ? subs : []);
    } catch {}
  }
  function renderCategorias(cats) {
    if (!categoriasContainer) return;
    categoriasContainer.innerHTML = cats.map(c => `
      <button type="button" data-cat-id="${c.id_categoria}" class="w-full px-3 py-2 rounded border text-sm hover:bg-gray-100 ${String(state.filtros.categoriaId)===String(c.id_categoria)?'bg-black text-white':''}">${c.nombre}</button>
    `).join('');
    categoriasContainer.querySelectorAll('[data-cat-id]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = Number(e.currentTarget.getAttribute('data-cat-id'));
        state.filtros.categoriaId = (state.filtros.categoriaId === id) ? null : id;
        state.filtros.subcategoriaId = null;
        try {
          categoriasContainer.querySelectorAll('[data-cat-id]').forEach(el => el.classList.remove('bg-black','text-white'));
          if (state.filtros.categoriaId === id) e.currentTarget.classList.add('bg-black','text-white');
        } catch {}
        subcatsContainer && (subcatsContainer.innerHTML = '');
        if (state.filtros.categoriaId) cargarSubcategorias(state.filtros.categoriaId);
        state.paginacion.paginaActual = 1;
        aplicarFiltros();
      });
    });
  }
  function renderSubcategorias(subs) {
    if (!subcatsContainer) return;
    if (!subs.length) { subcatsContainer.innerHTML = ''; return; }
    subcatsContainer.innerHTML = subs.map(s => `
      <button type="button" data-subcat-id="${s.id_subcategoria}" class="w-full px-3 py-2 rounded border text-sm hover:bg-gray-100 ${String(state.filtros.subcategoriaId)===String(s.id_subcategoria)?'bg-black text-white':''}">${s.nombre}</button>
    `).join('');
    subcatsContainer.querySelectorAll('[data-subcat-id]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = Number(e.currentTarget.getAttribute('data-subcat-id'));
        state.filtros.subcategoriaId = (state.filtros.subcategoriaId === id) ? null : id;
        try {
          subcatsContainer.querySelectorAll('[data-subcat-id]').forEach(el => el.classList.remove('bg-black','text-white'));
          if (state.filtros.subcategoriaId === id) e.currentTarget.classList.add('bg-black','text-white');
        } catch {}
        state.paginacion.paginaActual = 1;
        aplicarFiltros();
      });
    });
  }

  try {
    const url = new URL(window.location.href);
    const q = url.searchParams.get('q');
    const max = url.searchParams.get('max');
    const page = url.searchParams.get('page');
    const sort = url.searchParams.get('sort');
    const cat = url.searchParams.get('cat');
    const subcat = url.searchParams.get('subcat');
    if (q) {
      state.filtros.busqueda = q.toLowerCase();
      if (inputBusqueda) inputBusqueda.value = q;
    }
    if (max) {
      const val = Number(max);
      if (!Number.isNaN(val)) {
        state.filtros.usarPrecio = true;
        if (precioContainer) precioContainer.classList.remove('hidden');
        if (iconPrecio) iconPrecio.classList.add('rotate-180');
        if (rangoPrecio) rangoPrecio.value = String(val);
        state.filtros.precioMax = val;
        if (precioValor) precioValor.textContent = `$${val.toLocaleString('es-CL')}+`;
      }
    }
    if (page) {
      const p = Number(page);
      if (!Number.isNaN(p) && p >= 1) state.paginacion.paginaActual = p;
    }
    if (sort) {
      state.orden.sortBy = sort;
      try {
        const active = document.querySelector(`[data-sort-option="${sort}"]`);
        if (active) {
          document.querySelectorAll('[data-sort-option]').forEach(el => el.classList.remove('bg-black','text-white'));
          active.classList.add('bg-black','text-white');
        }
      } catch {}
    }
    if (cat) {
      const cid = Number(cat);
      if (!Number.isNaN(cid)) state.filtros.categoriaId = cid;
    }
    if (subcat) {
      const sid = Number(subcat);
      if (!Number.isNaN(sid)) state.filtros.subcategoriaId = sid;
    }
  } catch {}

  function formatearPrecio(precio) {
    return String(precio ?? 0).replace(/\B(?=(\d{3})+(?!\d))/g, '.');
  }

  function mostrarCargando() {
    if (!contenedorProductos) return;
    contenedorProductos.innerHTML = `
      <div class="col-span-full flex justify-center items-center py-12">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        <span class="ml-3 text-gray-600">Cargando productos...</span>
      </div>
    `;
  }

  function mostrarProductos(productos) {
    if (!contenedorProductos) return;
    if (!Array.isArray(productos) || productos.length === 0) {
      contenedorProductos.innerHTML = `<div class="col-span-full text-center py-12"><h3 class="text-lg font-medium text-gray-900 mb-2">No se encontraron productos</h3></div>`;
      return;
    }
    contenedorProductos.innerHTML = productos.map(p => {
      const img = normalizeImageUrl(p.imagen_url);
      const base = Number(p.precio_venta ?? p.precio ?? 0);
      const final = Number(p.precio_final ?? base);
      const percCalc = base > 0 && final < base ? Math.round((1 - final / base) * 100) : 0;
      const perc = Number(p.tipo_oferta === 'porcentaje' ? (p.valor_oferta ?? percCalc) : percCalc) || 0;
      return `
      <div class="bg-white rounded-xl border border-gray-100 shadow hover:shadow-lg transition-all duration-300 cursor-pointer flex flex-col overflow-hidden" onclick="verProducto(${p.id_producto})">
        <div class="relative w-full aspect-square bg-white">
          ${p.oferta_activa ? '<span class=\'absolute top-2 left-2 z-10 text-[10px] px-2 py-1 bg-red-100 text-red-700 rounded\'>Oferta</span>' : ''}
          <div class="absolute inset-2 border border-gray-200 rounded-lg overflow-hidden">
            <img src="${img || '/images/placeholder-product.jpg'}" alt="${p.nombre}" class="w-full h-full object-cover" loading="lazy" decoding="async" sizes="(min-width:1024px) 25vw, 50vw" />
          </div>
        </div>
        <div class="p-4 flex-1 flex flex-col">
          <h3 class="text-sm font-semibold text-gray-900 mb-1 text-center">${p.nombre}</h3>
          <p class="text-gray-600 text-xs mb-3 line-clamp-2 text-center">${p.descripcion || 'Sin descripción'}</p>
          <div class="mt-auto flex items-center justify-center gap-2">
            ${perc > 0 ? '<span class="text-xs font-bold text-green-700 bg-green-100 px-2 py-1 rounded">-' + perc + '%</span>' : ''}
            <span class="px-4 py-2 bg-black text-white rounded text-lg font-bold">$${formatearPrecio(p.precio_final ?? p.precio_venta ?? p.precio ?? 0)}</span>
          </div>
        </div>
      </div>
    `}).join('');
  }

  function actualizarInfoPaginacion() {
    if (!infoPaginacionContainer) return;
    if (state.totalProductos === 0) {
      infoPaginacionContainer.innerHTML = '<p class="text-gray-500">No se encontraron productos</p>';
      return;
    }
    const inicio = (state.paginacion.paginaActual - 1) * state.paginacion.productosPorPagina + 1;
    const fin = Math.min(state.paginacion.paginaActual * state.paginacion.productosPorPagina, state.totalProductos);
    infoPaginacionContainer.innerHTML = `<p class="text-sm text-gray-500">Mostrando ${inicio} a ${fin} de ${state.totalProductos} resultados</p>`;
  }

  function actualizarPaginacion() {
    if (!paginacionContainer) return;
    if (state.paginacion.totalPaginas <= 1) { paginacionContainer.innerHTML = ''; return; }
    let html = '';
    if (state.paginacion.paginaActual > 1) {
      html += `
        <button
          onclick="cambiarPagina(${state.paginacion.paginaActual - 1})"
          aria-label="Página anterior"
          class="h-8 w-8 flex items-center justify-center rounded-full bg-black text-white hover:bg-gray-900 transition-colors duration-200 shadow"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </button>`;
    }
    html += '<div class="flex gap-2">';
    for (let i = 1; i <= state.paginacion.totalPaginas; i++) {
      if (i === state.paginacion.paginaActual) {
        html += `<button class="px-3 py-1 bg-black text-white rounded-full text-sm">${i}</button>`;
      } else {
        html += `<button onclick="cambiarPagina(${i})" class="px-3 py-1 text-gray-700 hover:bg-gray-100 rounded-full text-sm">${i}</button>`;
      }
    }
    html += '</div>';
    if (state.paginacion.paginaActual < state.paginacion.totalPaginas) {
      html += `
        <button
          onclick="cambiarPagina(${state.paginacion.paginaActual + 1})"
          aria-label="Página siguiente"
          class="h-8 w-8 flex items-center justify-center rounded-full bg-black text-white hover:bg-gray-900 transition-colors duration-200 shadow"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </button>`;
    }
    paginacionContainer.innerHTML = html;
  }

  function aplicarFiltros() {
    let arr = Array.isArray(state.todosProductos) ? [...state.todosProductos] : [];
    arr = arr.filter(p => {
      const term = state.filtros.busqueda?.toLowerCase() || '';
      if (term) {
        const n = (p.nombre || '').toLowerCase();
        const d = (p.descripcion || '').toLowerCase();
        if (!n.includes(term) && !d.includes(term)) return false;
      }
      if (state.filtros.categoriaId) {
        if (String(p.id_categoria) !== String(state.filtros.categoriaId)) return false;
      }
      if (state.filtros.subcategoriaId) {
        if (String(p.id_subcategoria) !== String(state.filtros.subcategoriaId)) return false;
      }
      if (state.filtros.usarPrecio) {
        const precio = Number(p.precio_final ?? p.precio_venta ?? p.precio ?? 0);
        if (!(precio >= state.filtros.precioMin && precio <= state.filtros.precioMax)) return false;
      }
      return true;
    });
    // Ordenamiento
    const byPrice = (p) => Number(p.precio_final ?? p.precio_venta ?? p.precio ?? 0);
    const bySold = (p) => Number(p.ventas_count ?? p.total_vendido ?? p.unidades_vendidas ?? 0);
    const byRated = (p) => Number(p.rating ?? p.valoracion ?? p.estrellas ?? 0);
    const byDate = (p) => {
      const d = p.fecha_creacion || p.created_at || p.fecha_creado;
      try { return new Date(d).getTime(); } catch { return 0; }
    };
    switch (state.orden.sortBy) {
      case 'price_asc':
        arr.sort((a, b) => byPrice(a) - byPrice(b));
        break;
      case 'price_desc':
        arr.sort((a, b) => byPrice(b) - byPrice(a));
        break;
      case 'sold_desc':
        arr.sort((a, b) => bySold(b) - bySold(a));
        break;
      case 'rated_desc':
        arr.sort((a, b) => byRated(b) - byRated(a));
        break;
      case 'newest':
        arr.sort((a, b) => byDate(b) - byDate(a));
        break;
      default:
        break;
    }
    state.totalProductos = arr.length;
    state.paginacion.totalPaginas = Math.ceil(state.totalProductos / state.paginacion.productosPorPagina);
    const inicio = (state.paginacion.paginaActual - 1) * state.paginacion.productosPorPagina;
    const fin = inicio + state.paginacion.productosPorPagina;
    const pagina = arr.slice(inicio, fin);
    mostrarProductos(pagina);
    actualizarInfoPaginacion();
    actualizarPaginacion();
    try {
      const params = new URLSearchParams();
      const term = state.filtros.busqueda?.trim();
      if (term) params.set('q', term);
      if (state.filtros.usarPrecio) params.set('max', String(state.filtros.precioMax));
      params.set('page', String(state.paginacion.paginaActual));
      if (state.orden.sortBy && state.orden.sortBy !== 'default') params.set('sort', state.orden.sortBy);
      if (state.filtros.categoriaId) params.set('cat', String(state.filtros.categoriaId));
      if (state.filtros.subcategoriaId) params.set('subcat', String(state.filtros.subcategoriaId));
      const url = new URL(window.location.href);
      url.search = params.toString();
      window.history.replaceState({}, '', url.toString());
    } catch {}
  }

  window.cambiarPagina = function(p) {
    if (p >= 1 && p <= state.paginacion.totalPaginas) {
      state.paginacion.paginaActual = p;
      aplicarFiltros();
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
  };

  window.verProducto = function(id) {
    try { trackEvent('catalog_view_product', { id }); } catch {}
    window.location.href = `/productos/${id}`;
  };

  async function cargarProductos() {
    mostrarCargando();
    try {
      await fetch('/api/health').catch(() => {});
      const res = await fetch('/api/productos/catalogo?skip=0&limit=1000');
      const productos = res.ok ? await res.json() : [];
      state.todosProductos = productos;
      state.paginacion.paginaActual = 1;
      aplicarFiltros();
    } catch (e) {
      if (contenedorProductos) {
        contenedorProductos.innerHTML = '<div class="col-span-full text-center py-12 text-red-600">Error al cargar el catálogo</div>';
      }
      console.error(e);
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    cargarCategorias();
    if (state.filtros.categoriaId) cargarSubcategorias(state.filtros.categoriaId);
    cargarProductos();
  });

  // Eventos UI: búsqueda y precio
  if (inputBusqueda) {
    inputBusqueda.addEventListener('input', (e) => {
      state.filtros.busqueda = (e.target.value || '').toLowerCase();
      state.paginacion.paginaActual = 1;
      aplicarFiltros();
    });
  }

  if (rangoPrecio) {
    const initial = Number(rangoPrecio.value || 100000);
    state.filtros.precioMax = initial;
    if (precioValor) precioValor.textContent = `$${initial.toLocaleString('es-CL')}+`;
    rangoPrecio.addEventListener('input', (e) => {
      const val = Number(e.target.value || 0);
      state.filtros.precioMax = val;
      state.paginacion.paginaActual = 1;
      if (precioValor) precioValor.textContent = `$${val.toLocaleString('es-CL')}+`;
      aplicarFiltros();
    });
  }

  // Toggle de filtro por precio (como categorías)
  if (btnTogglePrecio && precioContainer) {
    btnTogglePrecio.addEventListener('click', () => {
      const activo = !precioContainer.classList.contains('hidden');
      if (activo) {
        precioContainer.classList.add('hidden');
        state.filtros.usarPrecio = false;
      } else {
        precioContainer.classList.remove('hidden');
        state.filtros.usarPrecio = true;
      }
      if (iconPrecio) iconPrecio.classList.toggle('rotate-180');
      state.paginacion.paginaActual = 1;
      aplicarFiltros();
    });
  }

  // Toggle de orden
  if (btnToggleOrden && ordenContainer) {
    btnToggleOrden.addEventListener('click', () => {
      const activo = !ordenContainer.classList.contains('hidden');
      if (activo) {
        ordenContainer.classList.add('hidden');
      } else {
        ordenContainer.classList.remove('hidden');
      }
      if (iconOrden) iconOrden.classList.toggle('rotate-180');
    });
    // Opciones de orden
    ordenContainer.querySelectorAll('[data-sort-option]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const val = e.currentTarget.getAttribute('data-sort-option') || 'default';
        state.orden.sortBy = val;
        // marcar activa
        try {
          ordenContainer.querySelectorAll('[data-sort-option]').forEach(el => el.classList.remove('bg-black','text-white'));
          e.currentTarget.classList.add('bg-black','text-white');
        } catch {}
        state.paginacion.paginaActual = 1;
        aplicarFiltros();
      });
    });
  }

  // Toggle de categorías
  if (btnToggleCategorias && categoriasContainer) {
    btnToggleCategorias.addEventListener('click', () => {
      categoriasContainer.classList.toggle('hidden');
      if (iconCategorias) iconCategorias.classList.toggle('rotate-180');
    });
  }
  // Toggle de subcategorías
  if (btnToggleSubcats && subcatsContainer) {
    btnToggleSubcats.addEventListener('click', () => {
      subcatsContainer.classList.toggle('hidden');
      if (iconSubcats) iconSubcats.classList.toggle('rotate-180');
    });
  }
</script>

