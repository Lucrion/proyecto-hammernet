---
import Layout from '../layouts/Layout.astro';
import EnvLoader from '../components/EnvLoader.astro';
import productosScriptUrl from '../scripts/pages/productos.js?url';
---

<EnvLoader />
<script type="module" src={productosScriptUrl}></script>

<Layout title="Productos - Ferretería Patricio">
	<div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row gap-8">
            <!-- Filtros -->
            <div class="w-full md:w-64 bg-white border border-gray-200 p-6 rounded-xl shadow h-fit transition-all duration-300 font-sans text-sm sticky top-24" data-aos="fade-right" data-aos-duration="1000">
                <!-- Buscador arriba de los filtros -->
                <div class="mb-6">
                    <label for="busqueda" class="block text-sm font-medium text-gray-700 mb-2">Buscar Producto</label>
                    <div class="relative">
                        <input
                            id="busqueda"
                            type="text"
                            placeholder="Buscar Producto"
                            class="w-full p-3 pl-10 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black"
                        />
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                </div>
                <!-- Título de filtros eliminado -->
                
                <div class="space-y-8">
                    <!-- Rango de precio -->
                    <div class="border-b pb-6">
                        <h3 class="font-semibold mb-4 text-gray-700">Buscar por precio</h3>
                        <div class="space-y-3">
                            <input id="precio-rango" type="range" class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-blue-600" min="0" max="100000" step="1000">
                            <div class="flex justify-between text-sm text-gray-600">
                                <span>$0</span>
                                <span id="precio-valor">$100.000+</span>
                            </div>
                        </div>
                    </div>

					<!-- Categorías -->
					<div class="border-b pb-6">
						<button id="toggle-categorias" class="flex items-center justify-between w-full font-semibold mb-4 text-gray-700 hover:text-blue-600">
							<span>Categorías</span>
							<svg id="icon-categorias" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-4 w-4 transform transition-transform duration-200">
								<path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.21 8.29a.75.75 0 01.02-1.08z" clip-rule="evenodd" />
							</svg>
						</button>
						<div id="categorias-lista" class="space-y-3 hidden"></div>
					</div>

					<!-- Subcategorías -->
					<div class="border-b pb-6">
						<button id="toggle-subcategorias" class="flex items-center justify-between w-full font-semibold mb-4 text-gray-700 hover:text-blue-600 disabled:text-gray-400" disabled>
							<span>Subcategorías</span>
							<svg id="icon-subcategorias" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-4 w-4 transform transition-transform duration-200">
								<path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.21 8.29a.75.75 0 01.02-1.08z" clip-rule="evenodd" />
							</svg>
						</button>
						<div id="subcategorias-lista" class="space-y-3 hidden"></div>
					</div>

                    
                    
				</div>
			</div>

			<!-- Productos -->
			<div class="flex-1">
				<div id="productos-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
					<!-- Los productos se cargarán dinámicamente desde la API -->
					<div class="col-span-full text-center py-8">
						<div class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-500 mx-auto"></div>
						<p class="text-gray-500 mt-4">Cargando productos...</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Información de paginación -->
		<div id="info-paginacion" class="mt-8 text-center text-gray-600">
			<!-- La información se generará dinámicamente -->
		</div>

		<!-- Paginación -->
		<div id="paginacion" class="mt-4 flex justify-center items-center gap-4">
			<!-- La paginación se generará dinámicamente -->
		</div>
	</div>

	<!-- Footer -->
	<footer class="mt-8 pt-6 border-t border-gray-200 bg-gradient-to-b from-white to-gray-50">
		<div class="container mx-auto px-4">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6 pb-6">
				<div class="text-center md:text-left">
					<img src="/images/logos/logo_bn.webp" alt="Ferretería Patricio" class="w-40 h-32 object-contain mx-auto md:mx-0 mb-3">
				</div>
				<div class="text-center md:text-left">
					<h3 class="text-lg font-semibold mb-3 text-gray-800">Contacto</h3>
					<div class="space-y-2 text-sm">
						<div class="flex items-center gap-2 justify-center md:justify-start">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
								<path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
							</svg>
							<span>+56 9 0000000</span>
