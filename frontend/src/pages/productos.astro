                    <div class="relative">
                        <input
                            id="busqueda"
                            type="text"
                            placeholder="Buscar Producto"
                            class="w-full p-3 pl-10 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black"
                        />
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                </div>

                <div class="space-y-8">
                    <!-- Ordenar por -->
                    <div class="border-b pb-6">
                        <button id="toggle-orden" class="flex items-center justify-between w-full font-semibold mb-4 text-gray-700 hover:text-blue-600">
                            <span>Ordenar por</span>
                            <svg id="icon-orden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-4 w-4 transform transition-transform duration-200">
                                <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.21 8.29a.75.75 0 01.02-1.08z" clip-rule="evenodd" />
                            </svg>
                        </button>
                        <div id="orden-container" class="space-y-3 hidden">
                            <div class="grid grid-cols-1 gap-2">
                                <button type="button" data-sort-option="price_asc" class="w-full px-3 py-2 rounded border text-sm hover:bg-gray-100">Precio: menor → mayor</button>
                                <button type="button" data-sort-option="price_desc" class="w-full px-3 py-2 rounded border text-sm hover:bg-gray-100">Precio: mayor → menor</button>
                                <button type="button" data-sort-option="sold_desc" class="w-full px-3 py-2 rounded border text-sm hover:bg-gray-100">Más vendidos</button>
                                <button type="button" data-sort-option="rated_desc" class="w-full px-3 py-2 rounded border text-sm hover:bg-gray-100">Mejor valorados</button>
                                <button type="button" data-sort-option="newest" class="w-full px-3 py-2 rounded border text-sm hover:bg-gray-100">Más nuevos</button>
                            </div>
