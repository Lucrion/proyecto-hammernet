    // Filtro de precio
    if (rangoPrecio) {
        rangoPrecio.addEventListener('input', (e) => {
            state.filtros.precioMax = parseInt(e.target.value);
            document.getElementById('precio-valor').textContent = formatearPrecio(e.target.value);
            state.paginacion.paginaActual = 1;
            aplicarFiltros();
        });
