                    console.log('Actualizando producto con ID:', id);
                    console.log('Datos del formulario:', {
                        nombre: formData.get('nombre'),
                        precio: formData.get('precio'),
                        categoria: formData.get('categoria'),
                        tieneImagen: base64Image ? 'nueva imagen' : (imagenActual ? 'imagen actual' : 'sin imagen')
                    });
                    
                    // Actualizar producto existente usando fetchWithAuth
                    response = await fetchWithAuth(`/productos/${id}/`, {
                        method: 'PUT',
                        body: formData,
                        headers: {
                            // Eliminar Content-Type para que el navegador lo establezca automáticamente con el boundary correcto
                            'Accept': 'application/json'
                        }
                    });
                } else {
                    console.log('Creando nuevo producto');
