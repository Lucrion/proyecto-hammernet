                if (!response) {
                    throw new Error('No se recibió respuesta del servidor');
                }
                
                if (!response.ok) {
                    const errorData = await response.json().catch(() => ({}));
                    const errorMessage = errorData.detail || errorData.message || `Error ${response.status}: ${response.statusText}`;
                    
                    // Mensaje genérico para cualquier error
                    if (errorMessage.includes('imagen') || errorMessage.includes('Cloudinary')) {
                        console.error('Error relacionado con la imagen:', errorMessage);
                        throw new Error('Error al guardar el producto: Error al procesar la imagen.');
