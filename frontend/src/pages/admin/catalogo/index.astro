        const specs = {};
        const parts = str.split(/[\n;]+/).map(s => s.trim()).filter(Boolean);
        for (const part of parts) {
            const idx = part.indexOf(':');
            if (idx > -1) { const key = part.slice(0, idx).trim(); const val = part.slice(idx + 1).trim(); if (key) specs[key] = val; }
        }
        return specs;
    };

