    async function obtenerProductos() {
        try { productos = await getData('/api/productos'); } catch (error) { console.error('Error al obtener productos:', error); }
    }
    async function obtenerCategorias() {
        try { categorias = await getData('/api/categorias'); } catch (error) { console.error('Error al obtener categorías:', error); }
    }
    async function obtenerInventario() {
        try {
            let total = 0;
            try { const totalResp = await getData('/api/productos/inventario/total'); total = (totalResp && typeof totalResp.total === 'number') ? totalResp.total : 0; } catch (e) { console.warn('No se pudo obtener el total de inventario:', e); }
            const limit = total && total > 0 ? total : 1000;
            const url = `/api/productos/inventario?skip=0&limit=${limit}`;
            inventario = await getData(url);
        } catch (error) { console.error('Error al obtener inventario:', error); inventario = []; }
    }
    async function obtenerCatalogo() {
        try {
            let total = 0;
            try { const totalResp = await getData('/api/productos/catalogo/total'); total = (totalResp && typeof totalResp.total === 'number') ? totalResp.total : 0; } catch (e) { console.warn('No se pudo obtener el total de catálogo:', e); }
            const limit = total && total > 0 ? total : 1000;
            const url = `/api/productos/catalogo?skip=0&limit=${limit}`;
            const catalogo = await getData(url);
            return Array.isArray(catalogo) ? catalogo : [];
        } catch (error) { console.error('Error al obtener catálogo:', error); return []; }
    }
    async function obtenerCatalogoInventario() {
        try {
            await obtenerInventario();
            const catalogoPublico = await obtenerCatalogo();
            productosCatalogados = catalogoPublico;
            productosInventario = inventario.map(itemInventario => ({
                ...itemInventario.producto,
                precio_inventario: itemInventario.precio,
                cantidad_disponible: itemInventario.cantidad,
                fecha_registro: itemInventario.fecha_registro
            }));
            const idsCatalogados = new Set(productosCatalogados.map(p => p && (p.id_producto ?? p.producto?.id_producto)).filter(id => id != null));
            productosInventario = productosInventario.filter(p => !idsCatalogados.has(p.id_producto));
            productos = [...productosCatalogados, ...productosInventario];
        } catch (error) { console.error('Error al obtener datos del catálogo e inventario:', error); throw error; }
    }
