        console.error('Error al crear usuario:', error);
        const msg = String(error && error.message || '');
        let det = 'Error al crear usuario';
        try {
            const jsonStr = msg.replace(/^Error\s+\d+:\s+/, '');
            const data = JSON.parse(jsonStr);
            if (data && data.detail) {
                det = typeof data.detail === 'string' ? data.detail : JSON.stringify(data.detail);
            }
        } catch {}
        mostrarMensaje(det, 'error');
    }
}

