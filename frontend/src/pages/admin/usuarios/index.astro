            const formData = new FormData(usuarioForm);
            const data = Object.fromEntries(formData.entries());
            const rutOriginal = String(data.rut || '');
            if (rutOriginal) {
                const cleaned = cleanRutInput(rutOriginal);
                let body = '';
                if (/^[0-9]+[kK]?$/.test(cleaned)) { body = cleaned.length >= 2 ? cleaned.slice(0, -1) : cleaned; }
                body = body.slice(0, 8);
                data.rut = body ? Number(body) : null;
                data.username = body || null;
            } else { data.rut = null; data.username = null; }
            if (data.nombre !== undefined) { data.nombre = String(data.nombre).trim(); }
            if (data.apellido !== undefined) { data.apellido = String(data.apellido).trim(); }
            if (data.role !== undefined) { data.role = String(data.role).toLowerCase().trim(); }
            if (data.password !== undefined && String(data.password).trim() === '') { delete data.password; }
            const userId = document.getElementById('userId').value;
            const isNew = !userId;
            const errores = validarFormularioUsuario({ ...data, rut: rutOriginal }, { isNew });
            if (errores.length > 0) { errores.forEach(err => mostrarMensaje(err, 'error')); return; }
            if (userId) { await actualizarUsuario(userId, data); } else { await crearUsuario(data); }
        });
    }

    const selectTam = document.getElementById('selectTamPaginaUsuarios');
    const btnPrev = document.getElementById('btnPrevUsuarios');
    const btnNext = document.getElementById('btnNextUsuarios');
    if (selectTam) {
        const initialVal = parseInt(selectTam.value, 10);
        tamPagina = isNaN(initialVal) ? 20 : initialVal;
        selectTam.addEventListener('change', () => {
            const val = parseInt(selectTam.value, 10);
            tamPagina = isNaN(val) ? 20 : val;
            paginaActual = 1;
            renderPagina();
        });
    }
    if (btnPrev) { btnPrev.addEventListener('click', () => { if (!btnPrev.disabled && paginaActual > 1) { paginaActual -= 1; renderPagina(); } }); }
