---
interface Props {
	title: string;
}

const { title } = Astro.props;
import EnvLoader from '../components/EnvLoader.astro';
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Panel de Administración - Ferretería Patricio">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/logos/logo_bn.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="https://unpkg.com/htmx.org@1.9.9" integrity="sha384-QFjmbokDn2DjBjq+fM+8LUIVrAgqcNW2s0PjAxHETgRn9l4fvX31ZxDxvwQnyMOX" crossorigin="anonymous"></script>
        <!-- Inyección de variables de entorno para frontend -->
        <EnvLoader />
        <!-- Inyección de variables de entorno para frontend -->
	</head>
	<body class="min-h-screen bg-gray-100 flex">
		<!-- Sidebar de navegación -->
		<aside class="w-60 bg-white shadow-lg min-h-screen p-4 flex flex-col">
			<div class="mb-8">
				<img src="/images/logos/hammernet.webp" alt="Hammernet" class="h-12 mx-auto">
			</div>
			
			<nav class="flex-1">
				<ul class="space-y-2">
					<li>
						<a href="/admin" class="flex items-center p-3 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
							</svg>
							Inicio
						</a>
					</li>
					<li>
						<a href="/admin/usuarios" class="flex items-center p-3 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
							</svg>
							Usuarios
						</a>
					</li>
					<li>
						<a href="/admin/catalogo" class="flex items-center p-3 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
							</svg>
							Catálogo
						</a>
					</li>
					<li>
						<a href="/admin/inventario" class="flex items-center p-3 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
							</svg>
							Inventario
						</a>
					</li>
					<li>
						<a href="/admin/mensajes" class="flex items-center p-3 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
							</svg>
							Mensajes
						</a>
					</li>
					<li>
						<a href="/admin/ventas" class="flex items-center p-3 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
							</svg>
							Ventas
						</a>
					</li>
				</ul>
			</nav>
			

		</aside>

		<!-- Contenido principal -->
		<main class="flex-1 p-8">
			<div class="flex justify-between items-center mb-8">
				<h1 class="text-2xl font-bold text-gray-900" id="pageTitle">{title}</h1>
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <button id="btnNotificaciones" class="text-gray-500 hover:text-gray-700">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                            </svg>
                        </button>
                        <span id="notifBadge" class="hidden absolute -top-1 -right-1 bg-red-600 text-white text-xs rounded-full px-1">0</span>
                        <div id="notifPanel" class="hidden absolute right-0 mt-2 w-80 bg-white rounded-lg shadow-lg ring-1 ring-gray-200 z-50">
                            <div class="px-4 py-2 border-b border-gray-100 text-sm font-medium text-gray-700">Notificaciones</div>
                            <div id="notifList" class="max-h-80 overflow-auto">
                                <div class="px-4 py-3 text-sm text-gray-500">Sin notificaciones</div>
                            </div>
                        </div>
                    </div>
                    <div class="flex items-center space-x-2">
                        <img src="/images/logos/logo_bn.webp" alt="Usuario" class="h-8 w-8 rounded-full bg-gray-200">
                        <span class="text-gray-700" id="nombreUsuario">Administrador</span>
                    </div>
                </div>
			</div>
			
			<slot />
		</main>

		<!-- Botón flotante de cerrar sesión (solo escritorio) -->
		<button id="btnLogoutFloating" class="hidden lg:flex fixed left-6 bottom-6 items-center gap-2 px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-full shadow-lg">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
			<span>Cerrar sesión</span>
		</button>
	</body>
</html>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const nombreUsuarioElement = document.getElementById('nombreUsuario');
    const nombreUsuario = (sessionStorage.getItem('nombreUsuario') || localStorage.getItem('nombreUsuario'));
    const btnLogout = document.getElementById('btnLogout');
    const btnLogoutFloating = document.getElementById('btnLogoutFloating');
    const btnNotificaciones = document.getElementById('btnNotificaciones');
    const notifPanel = document.getElementById('notifPanel');
    const notifBadge = document.getElementById('notifBadge');
    const notifList = document.getElementById('notifList');

    const isLoggedIn = (sessionStorage.getItem('isLoggedIn') === 'true') || (localStorage.getItem('isLoggedIn') === 'true');
    const token = sessionStorage.getItem('token') || localStorage.getItem('token');
    const storedRole = sessionStorage.getItem('role') || localStorage.getItem('role');
    const loginTipo = localStorage.getItem('loginTipo') || '';
    const storedUserRaw = sessionStorage.getItem('user') || localStorage.getItem('user');
    let storedUserRole = null;
    try {
        const u = storedUserRaw ? JSON.parse(storedUserRaw) : null;
        storedUserRole = u && (u.rol || u.role) ? (u.rol || u.role) : null;
    } catch {}
    const role = String(storedUserRole || storedRole || loginTipo || '').toLowerCase();
    const allowedRoles = ['administrador','admin','trabajador','vendedor','bodeguero'];

    if (!isLoggedIn) {
        window.location.href = '/login?tipo=trabajador';
        return;
    }
    if (!allowedRoles.includes(role)) {
        window.location.href = '/';
        return;
    }

    if (nombreUsuario && nombreUsuarioElement) {
        nombreUsuarioElement.textContent = nombreUsuario;
    }

    function doLogout() {
            try {
                sessionStorage.removeItem('isLoggedIn');
                sessionStorage.removeItem('nombreUsuario');
                sessionStorage.removeItem('token');
                sessionStorage.removeItem('user');
                sessionStorage.removeItem('role');
            } catch {}
            try {
                localStorage.removeItem('isLoggedIn');
                localStorage.removeItem('nombreUsuario');
                localStorage.removeItem('token');
                localStorage.removeItem('user');
                localStorage.removeItem('role');
            } catch {}
            try {
                document.cookie = 'isLoggedIn=; Max-Age=0; path=/; SameSite=Lax';
                document.cookie = 'role=; Max-Age=0; path=/; SameSite=Lax';
                document.cookie = 'loginTipo=; Max-Age=0; path=/; SameSite=Lax';
            } catch {}
            window.location.href = '/';
    }
    if (btnLogout) btnLogout.addEventListener('click', doLogout);
    if (btnLogoutFloating) btnLogoutFloating.addEventListener('click', doLogout);

    async function fetchJSON(url) {
        const res = await fetch(url);
        if (!res.ok) throw new Error('HTTP ' + res.status);
        return res.json();
    }

    function renderNotifs(items) {
        const count = items.length;
        if (count > 0) {
            notifBadge.textContent = String(count);
            notifBadge.classList.remove('hidden');
            notifList.innerHTML = items.map(p => `
                <button data-name="${encodeURIComponent(p.nombre)}" class="w-full text-left px-4 py-3 hover:bg-gray-50 flex items-start gap-2">
                    <span class="inline-block w-2 h-2 rounded-full bg-red-600 mt-1"></span>
                    <span class="text-sm text-gray-800">${p.nombre} — Stock: ${p.cantidad_disponible}</span>
                </button>
            `).join('');
            Array.from(notifList.querySelectorAll('button')).forEach(b => {
                b.onclick = () => {
                    const n = decodeURIComponent(b.getAttribute('data-name'));
                    window.location.href = '/admin/inventario?q=' + encodeURIComponent(n);
                };
            });
        } else {
            notifBadge.classList.add('hidden');
            notifList.innerHTML = '<div class="px-4 py-3 text-sm text-gray-500">Sin notificaciones</div>';
        }
    }

    async function loadLowStock() {
        try {
            const productos = await fetchJSON(`${window.API_BASE || '/api'}/productos/`);
            const low = Array.isArray(productos) ? productos.filter(p => {
                const c = Number(p.cantidad_disponible || 0);
                const min = Number(p.stock_minimo || 0);
                const thr = min > 0 ? min : 5;
                return c >= 0 && c <= thr;
            }) : [];
            renderNotifs(low.slice(0, 50));
        } catch(e) {
            renderNotifs([]);
        }
    }

    if (btnNotificaciones && notifPanel) {
        btnNotificaciones.onclick = () => {
            notifPanel.classList.toggle('hidden');
        };
        document.addEventListener('click', (ev) => {
            const t = ev.target;
            if (!notifPanel.contains(t) && !btnNotificaciones.contains(t)) {
                notifPanel.classList.add('hidden');
            }
        });
        loadLowStock();
    }
});
</script>
